{
  "manifest_version": 3,
  "name": "Life Countdown — New Tab",
  "version": "1.0.0",
  "description": "A modern Memento Mori–style life countdown that replaces the New Tab page with a live timer and minimal wallpaper.",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "action": {
    "default_popup": "basic.html",
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"]
}
